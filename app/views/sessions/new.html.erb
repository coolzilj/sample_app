<div class="form-head"><h1>Sign in</h1></div>

<%= form_for(:session, :url => sessions_path) do |f| %>
		<% flash.each do |key,value| %>
			<div class="alert-message <%= key %>"><%= value %></div>
		<% end %>
  <div class="clearfix">
    <%= f.label :email %> 
		<div class="input"><%= f.text_field :email %></div>
  </div>
  <div class="clearfix">
    <%= f.label :password %>
    <div class="input"><%= f.password_field :password %></div>
	</div>
  <div class="actions">
    <%= f.submit "Sign in", :class => "btn primary" %>
		<%= link_to "Sign up now!", signup_path, :class => "btn small" %>
  </div>
<% end %>


