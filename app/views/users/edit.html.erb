<div class="form-head"><h1>Edit user</h1></div>

<%= form_for @user,:html => { :multipart => true} do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="clearfix">
    <%= f.label :name %>
    <div class="input"><%= f.text_field :name %></div>
  </div>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input"><%= f.text_field :email %></div>
  </div>
  <div class="clearfix">
    <%= f.label :password %>
   <div class="input"><%= f.password_field :password %></div> 
  </div>
  <div class="clearfix">
    <%= f.label :password_confirmation, "Confirmation" %>
    <div class="input"><%= f.password_field :password_confirmation %></div>
  </div>
	<div class="clearfix">
    <%= f.label :avatar ,"Avatar" %>
    <div class="input"><%= f.file_field :avatar , :class=>"input-file" %>	</div>
	</div>
  <div class="actions">
    <%= f.submit "Update", :class=>"btn primary"%>
  </div>
<% end %>

